doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(rel='stylesheet' href='./vendors/css/normalize.css')
        link(rel='stylesheet' href='./vendors/css/grid.css')
        link(rel='stylesheet' href='./vendors/css/ionicons.min.css')
        link(rel='stylesheet' href='./vendors/css/animate.css')
        link(rel='stylesheet' href='./resources/css/style.css')
        link(rel='stylesheet' href='./resources/css/queries.css')
        link(href='https://fonts.googleapis.com/css?family=Lato:100,300,300i,400&display=swap' rel='stylesheet')
        title User Profile | Foodie Chacha
        link(rel='apple-touch-icon' sizes='180x180' href='./resources/favicons/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='16x16' href='./resources/favicons/favicon-16x16.png')
        link(rel='icon' type='image/png' sizes='32x32' href='./resources/favicons/favicon-32x32.png')
        link(rel='manifest' href='./resources/favicons/site.webmanifest')
        link(rel='mask-icon' href='./resources/favicons/safari-pinned-tab.svg' color='#3e3f3f')
        link(rel='shortcut icon' href='./resources/favicons/favicon.ico')
        meta(name='msapplication-TileColor' content='#ffffff')
        meta(name='msapplication-config' content='./resources/favicons/browserconfig.xml')
        meta(name='theme-color' content='#ffffff')
    body
        header#main-home
            nav
                .row
                    a(href='/#main-home')
                        img.logo(src='./Omnifood Contents/logo-white.png' alt='OmniFood Logo')
                    a(href='/#main-home')
                        img.logo-black(src='./Omnifood Contents/logo.png' alt='OmniFood Logo')
                    ul.main-nav.js--main-nav
                        li
                            a(href='/#feature') Food Delivery
                        li
                            a(href='/#steps') How it Works
                        li
                            a(href='/#cities') Out Cities
                        li
                            a(href='/signup') Sign Up
                        li
                            a(href='/login') Login
                    a.mobile-nav-icon.js--nav-icon
                        i.ion-navicon-round
            .profile-summary.ErrorText
                .profilePic-Container
                    img#profilePic(src= ( file === undefined ? './resources/img/VishalImage.jpg' : file) alt='User Profile Pic')
                    #ImageFormContainer.ErrorText
                        form(action='/upload' method='POST' enctype='multipart/form-data' id="ImageForm")
                            input(name='myImage' type='file' id="myImage" class="ImageUploader")
                            label(for="myImage")
                                i(class="icon ion-upload icon-upload")
                .userName
                    span Vishal Kumar
        section.internal-nav
            .row
                .userOption
                    .option.info Info
                    .option.orders Orders
                    .option.address Address
                    if user.role !== "admin"
                        .option.updatepassword Update Password
                    else 
                        .option.addplan Add Plan
        section.options-info.options-user
            .row
                h2 Details
            .row
                form.contact-form.updatePass-form(method='POST' action='/api/user/updatepassword')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='oldpassword') Old Password (8 characters minimum)
                        .col.span-2-of-3
                            input(type='text' name='oldpassword' placeholder='Old Password' required='' value='')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='newpassword') New Password
                        .col.span-2-of-3
                            input(type='password' name='newpassword' placeholder='New Password' minlength='8' required='' value='')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='confirmpassword') Confirm Password
                        .col.span-2-of-3
                            input(type='password' name='confirmpassword' placeholder='Confirm Password' minlength='8' required='' value='')
                    .row
                        .userSubmit
                            input(type='submit' value='Submit')
        section.options-orders.options-user
            .row
                h2 Orders
            .row
                form.contact-form.updatePass-form(method='POST' action='/api/user/updatepassword')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='oldpassword') Old Password (8 characters minimum)
                        .col.span-2-of-3
                            input(type='text' name='oldpassword' placeholder='Old Password' required='' value='')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='newpassword') New Password
                        .col.span-2-of-3
                            input(type='password' name='newpassword' placeholder='New Password' minlength='8' required='' value='')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='confirmpassword') Confirm Password
                        .col.span-2-of-3
                            input(type='password' name='confirmpassword' placeholder='Confirm Password' minlength='8' required='' value='')
                    .row
                        .userSubmit
                            input(type='submit' value='Submit')
        section.options-address.options-user
            .row
                h2 Update Address
            .row
                form.contact-form.updatePass-form(method='POST' action='/api/user/updatepassword')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='oldpassword') Old Password (8 characters minimum)
                        .col.span-2-of-3
                            input(type='text' name='oldpassword' placeholder='Old Password' required='' value='')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='newpassword') New Password
                        .col.span-2-of-3
                            input(type='password' name='newpassword' placeholder='New Password' minlength='8' required='' value='')
                    .row.reset-field
                        .col.span-1-of-3
                            label(for='confirmpassword') Confirm Password
                        .col.span-2-of-3
                            input(type='password' name='confirmpassword' placeholder='Confirm Password' minlength='8' required='' value='')
                    .row
                        .userSubmit
                            input(type='submit' value='Submit')
        if user.role !== "admin"
            section.options-updatepassword.options-user
                .row
                    h2 Update Password
                .row
                    form.contact-form.updatePass-form(method='POST' action='/api/user/updatepassword')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='oldpassword') Old Password (8 characters minimum)
                            .col.span-2-of-3
                                input#oldpass(type='text' name='oldpassword' placeholder='Old Password' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='newpassword') New Password
                            .col.span-2-of-3
                                input#pass(type='password' name='newpassword' placeholder='New Password' minlength='8' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='confirmpassword') Confirm Password
                            .col.span-2-of-3
                                input#confirmpass(type='password' name='confirmpassword' placeholder='Confirm Password' minlength='8' required='' value='')
                        .row
                            .userSubmit
                                input(type='submit' value='Submit')
        else
            section.options-addplan.options-user
                .row
                    h2 Add Plan
                .row
                    form.contact-form.addPlan-form(method='POST' action='/api/user/addPlan')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='planName') Plan Name
                            .col.span-2-of-3
                                input#planName(type='text' name='planName' placeholder='e.g Pujabi Tadka' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='price') Plan Price
                            .col.span-2-of-3
                                input#price(type='number' name='price' placeholder='e.g 150' minlength='1' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='mealPrice') Meal Price
                            .col.span-2-of-3
                                input#mealPrice(type='number' name='mealPrice' placeholder='e.g 10' minlength='1' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='access') Access to Newest Creations
                            .col.span-2-of-3
                                input#access(type='text' name='access' placeholder='e.g Yes/No' minlength='2' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='packageType') Package Type
                            .col.span-2-of-3
                                input#packageType(type='text' name='packageType' placeholder='e.g Premiun/Pro/Starter' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='mealFreq') Meal Frequency(e.g 1 meal every day)
                            .col.span-2-of-3
                                input#mealFreq(type='text' name='mealFreq' placeholder='e.g 1 meal 10 days/month' required='' value='')
                        .row.reset-field
                            .col.span-1-of-3
                                label(for='OrderType') Order Type
                            .col.span-2-of-3
                                input#OrderType(type='text' name='OrderType' placeholder='e.g Order 24/7' required='' value='')
                        .row
                            .userSubmit
                                input(type='submit' value='Submit')                        

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
        script(src='https://cdn.jsdelivr.net/respond/1.4.2/respond.min.js')
        script(src='https://cdn.jsdelivr.net/html5shiv/3.7.2/html5shiv.min.js')
        script(src='https://cdn.jsdelivr.net/selectivizr/1.0.3b/selectivizr.min.js')
        script(src='./resources/js/script.js')
        script(src='./resources/js/ImageUpload.js')
        script(src='./vendors/js/jquery.waypoints.min.js')
